.navigation-list
  list-style none
  margin 0
  padding 35px 0 0
  height 100%
  border-right 1px solid rgba(0,0,0,0.15)
  margin-left -15px
  background #f5f5f5
  &__item
    position relative
    padding 15px 30px
    &-link
      padding-bottom 45px
      display block
      font-size 2rem
      font-weight bold
      color #ee6e73
      text-decoration none
  &__item + &__item
    border-top 1px solid rgba(0,0,0,0.15)